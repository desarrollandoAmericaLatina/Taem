@{
    ViewBag.Title = "Index";
}
<div id="fb-root">
</div>
<script>    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) { return; }
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/es_LA/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    } (document, 'script', 'facebook-jssdk'));</script>
<div id="tabs">
    <ul>
        <li><a href="#quiero">Tu ayuda es mi ayuda</a></li>
        <li><a href="#estadistica">Estadística</a></li>
        <li><a href="/proyecto/crear">Mi Colegio</a></li>
    </ul>
    <div id="quiero">
        <div style="float: right; height: 60px;">
            <span id="spanCargando" style="display: none">
                <img src="/Content/images/ajax-loader.gif" alt="Cargando" />&nbsp;Cargando...&nbsp;&nbsp;
            </span>
            <img style="vertical-align: middle;" src="@Url.Content("~/Content/images/logo.png")" alt="logo" />
        </div>
        <div style="float: left; height: 60px;">
            <div>
                Escribe en donde te gustaría donar (ej: La Pintana)</div>
            <div>
                <input type="text" id="txtDireccion" name="txtDireccion" value="Valparaiso" style="width: 350px" />
            </div>
        </div>
        <div style="margin-left: 360px; height: 60px; position: relative;">
            <button type="submit" id="btnBuscar" name="btnBuscar" class="buttonGreen" style="display: inline-block;
                position: absolute; top: 10px; width: 150px">
                Buscar
            </button>
        </div>
        <div>
            <div id="divOptions" style="float: right; width: 300px; margin-right: 0">
                <h2>
                    Filtros</h2>
                <div>
                    ¿Qué donar?</div>
                <div>
                    <input type="text" id="txtQueDonar" name="txtQueDonar" style="width: 150px;" /></div>
                <div>
                    <div>
                        <ul class="filtros">
                            <li>
                                <input type="checkbox" /><span>Con proyectos abiertos</span></li>
                            <li>
                                <input type="checkbox" /><span>Municipal</span></li>
                            <li>
                                <input type="checkbox" /><span>Particular</span></li>
                            <li>
                                <input type="checkbox" /><span>Subvencionada</span></li>
                        </ul>
                    </div>
                    <button type="submit" class="buttonBlue" style="width: 150px">
                        Filtrar</button>
                </div>
                <div class="fb-like" data-send="true" data-width="300" data-show-faces="true"></div>
                <div class="fb-comments" data-href="http://www.tuayudamiayuda.cl" data-num-posts="2" data-width="300"></div>
            </div>
            <div class="boxItem">
                <div>
                    <h2>
                        Escuelas en el mapa &nbsp;<span id="spanNumeroEscuelas"></span>
                    </h2>
                </div>
                <div id="divListado">
                </div>
            </div>
            <div id="divMap" style="height: 300px; margin: 0 auto; min-width: 200px">
            </div>
        </div>
    </div>
    <div id="estadistica">
        <div class="infoBox" style="display: inline-block; margin-right: 10px">
            <div id="historias" class="ui-widget-content">
                <h3 class="ui-widget-header">
                    Historias</h3>
                historias
            </div>
        </div>
        <div class="infoBox" style="float: right">
            <div id="reportes" class="ui-widget-content">
                <h3 class="ui-widget-header">
                    Reportes</h3>
                Reportes
            </div>
        </div>
        <br style="clear: both" />
        <br style="clear: both" />
        <div class="infoBox" style="width: 100%">
            <div id="descripcion" class="ui-widget-content">
                <h3 class="ui-widget-header">
                    Descripción</h3>
                <ul>
                    <li>Qué se dona</li>
                    <li>A quién se dona</li>
                    <li>Cómo se dona</li>
                    <li>Dónde se dona</li>
                </ul>
            </div>
        </div>
    </div>
    <div id="donde">
    </div>
</div>
<div>
    <div id="dialog" style="display: none;"></div>
</div>
@section Scripts{
    <script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;language=es&amp;region=ES"
        type="text/javascript"></script>
    <script src="/Services/APIService.svc/ajax/js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Home/Index-1.0.0.js")" type="text/javascript"></script>
    
}
