@model WebSite.Models.CrearModel
@{
    ViewBag.Title = "Crear";
  
}
@section Styles {

}
@if (Model.Autenticado == false)
{ 

    <div>
        <table>
            <tr>
                <td>RBD
                </td>
                <td><input type="text" id="RDBIngresar" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="btns">
                        <button id="btnIngresarUsuario" type="button" >Ingresar</button>
                    </div>
                </td>
            </tr>
        </table>
    </div>

}
else
{ 

    <div class="ContentNormal">
        <header>
        </header>
        <div id="Proyectotabs">
            <ul>
                <li><a href="#dvNueva">Nuevo proyecto</a></li>
                <li><a href="#dvListado">Mis proyectos</a></li>
            </ul>
            <div id="dvNueva">
                <span id="spanErrorFijo"></span>
                @{
      
    Html.RenderPartial("ProyectoNuevo", Model);
                             
                }
            </div>
            <div id="dvListado">
                <table>
                    <thead>
                        <tr>
                            <td>
                                Ver
                            </td>
                            <td>
                                Nombre
                            </td>
                            <td>
                                Descripción
                            </td>
                            <td>
                                Responsable
                            </td>
                            <td>
                                FechaIngreso
                            </td>
                            <td>
                                Cant. necesidades
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TAEM.Domain.Proyecto p in Model.Proyectos)
                    { 
                            <tr>
                                <td>@p.ID
                                </td>
                                <td>@p.Nombre
                                </td>
                                <td>@p.Descripcion
                                </td>
                                <td>@p.PersonaResponsable
                                </td>
                                <td>@p.FechaIngreso
                                </td>
                                <td>@p.Necesidades.Count()
                                </td>
                            </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <footer>
        </footer>
    </div>
}
@section Scripts {
    <script src="@Url.Content("~/Scripts/Proyecto/Crear-1.0.0.js")" type="text/javascript"></script>

}
